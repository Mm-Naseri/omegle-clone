<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Waiting Room</title>
  <script src="/socket.io/socket.io.js"></script>
  <style>
    body {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      font-family: "Arial", sans-serif;
      background-color: #f8f9fa; /* Light background */
      color: #333; /* Dark text for contrast */
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      color: #4CAF50; /* Green from your existing styles */
      text-align: center;
    }

    p {
      font-size: 1.2rem;
      margin-bottom: 2rem;
      text-align: center;
    }

    #loading-container {
      width: 80%;
      max-width: 400px;
    }

    #loading-bar {
      height: 20px;
      background-color: #e0e0e0; /* Light grey for the track */
      border-radius: 10px;
      overflow: hidden;
    }

    #loading-progress {
      height: 100%;
      width: 0%;
      background-color: #4CAF50; /* Green for the loading progress */
      border-radius: 10px;
      transition: width 0.5s ease-in-out;
    }

    /* Loading animation */
    @keyframes loading {
      0% {
        width: 0%;
      }
      25% {
        width: 25%;
      }
      50% {
        width: 50%;
      }
      75% {
        width: 75%;
      }
      100% {
        width: 100%;
      }
    }

    #loading-progress.animate {
      animation: loading 5s linear infinite; /* Adjust duration and timing as needed */
    }
  </style>
</head>
<body>
  <h1>Waiting for a partner...</h1>
  <p>Your user ID: <span id="user-id"><%= userId %></span></p>

  <div id="loading-container">
    <div id="loading-bar">
      <div id="loading-progress"></div>
    </div>
  </div>

  <script>
    const socket = io();
    const userIdSpan = document.getElementById('user-id');
    const loadingProgress = document.getElementById('loading-progress');

    loadingProgress.classList.add('animate');
    
    socket.emit('waiting', userIdSpan.textContent);

    socket.on('matchFound', (meetingId) => {
      loadingProgress.classList.remove('animate');
      loadingProgress.style.width = '100%';
      setTimeout(() => {
        window.location.href = `/${meetingId}?userId=${userIdSpan.textContent}`;
      }, 500);
    });
  </script>
</body>
</html>